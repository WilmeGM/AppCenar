{{! Commerce Dashboard View }}
<div class="container mt-5">
  <h1 class="text-center">Commerce Dashboard</h1>
  <div class="row">
    <!-- Manage Products Section -->
    <div class="col-md-4 mb-4">
      <div class="card">
        <div class="card-header bg-primary text-white">
          <h5>Manage Products</h5>
        </div>
        <div class="card-body">
          <p>View, edit, and add new products to your store.</p>
          <a href="/commerce/products" class="btn btn-primary w-100">Manage Products</a>
        </div>
      </div>
    </div>

    <!-- Manage Orders Section -->
    <div class="col-md-4 mb-4">
      <div class="card">
        <div class="card-header bg-success text-white">
          <h5>Manage Orders</h5>
        </div>
        <div class="card-body">
          <p>Track and manage customer orders, update statuses, and more.</p>
          <a href="/commerce/orders" class="btn btn-success w-100">Manage Orders</a>
        </div>
      </div>
    </div>

    <!-- Manage Customers Section -->
    <div class="col-md-4 mb-4">
      <div class="card">
        <div class="card-header bg-warning text-white">
          <h5>Manage Customers</h5>
        </div>
        <div class="card-body">
          <p>View and manage customer profiles, including contact information.</p>
          <a href="/commerce/customers" class="btn btn-warning w-100">Manage Customers</a>
        </div>
      </div>
    </div>
  </div>

  <div class="row">
    <!-- Analytics Section -->
    <div class="col-md-6 mb-4">
      <div class="card">
        <div class="card-header bg-info text-white">
          <h5>Sales Analytics</h5>
        </div>
        <div class="card-body">
          <p>View your store's sales performance and other important metrics.</p>
          <a href="/commerce/analytics" class="btn btn-info w-100">View Analytics</a>
        </div>
      </div>
    </div>

    <!-- Settings Section -->
    <div class="col-md-6 mb-4">
      <div class="card">
        <div class="card-header bg-dark text-white">
          <h5>Settings</h5>
        </div>
        <div class="card-body">
          <p>Update your store settings, shipping methods, and payment options.</p>
          <a href="/commerce/settings" class="btn btn-dark w-100">Store Settings</a>
        </div>
      </div>
    </div>
  </div>
</div>
