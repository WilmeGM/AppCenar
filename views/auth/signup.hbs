<!-- views/auth/signup.hbs -->

<main class="container">
    <form action="/signup" method="post" enctype="multipart/form-data">
        <h1 class="h3 mb-3 fw-normal">Create an account</h1>

        <div class="pb-3">
            <label for="name">Name: </label>
            <input type="text" class="form-control" name="name" placeholder="Name" id="name" required />
        </div>

        <div class="pb-3">
            <label for="lastname">Last Name:</label>
            <input id="lastname" type="text" class="form-control" name="lastName" id="floatingLastName"
                placeholder="Last Name" required />
        </div>

        <div class="pb-3">
            <label for="phone">Phone number: </label>
            <input id="phone" type="text" class="form-control" name="phone" placeholder="Phone" required />
        </div>

        <div class="pb-3">
            <label for="email">Email: </label>
            <input id="email" type="email" class="form-control" name="email" placeholder="Email" required />
        </div>

        <div class="pb-3">
            <label for="profilePhoto">Profile photo: </label>
            <input id="profilePhoto" type="file" class="form-control" name="image" required />
        </div>

        <div class="pb-3">
            <label for="username">Username</label>
            <input type="text" class="form-control" name="username" id="username" placeholder="Username" required />
        </div>

        <div class="pb-3">
            <select class="form-control" name="role" id="role" required>
                <option value="">What do you want to be?</option>
                <option value="delivery">delivery</option>
                <option value="customer">customer</option>
            </select>
        </div>

        <div class="pb-3">
            <label for="password">Password</label>
            <input required type="password" class="form-control" name="password" id="password" placeholder="Password" />
        </div>

        <div class="pb-3">
            <label for="confirmPassword">Confirm Password</label>
            <input required type="password" class="form-control" name="confirmPassword" id="confirmPassword"
                placeholder="Confirm Password" />
        </div>

        <button class="w-100 btn btn-lg btn-primary" type="submit">Create Account</button>
        <a href="/login" class="w-100 btn btn-lg btn-warning margin-top-2">Back</a>
    </form>
</main>