{{! views/admin/save-commerce-type.hbs }}

<main class="container">
    <form action="/save-commerce-type" method="post" enctype="multipart/form-data">
        <h1 class="h3 mb-3 fw-normal">Create a commerce type</h1>

        <div class="pb-3">
            <label for="name">Name: </label>
            <input type="text" class="form-control" name="name" placeholder="Name" id="name" required />
        </div>

        <div class="pb-3">
            <label for="description">Description:</label>
            <input id="description" type="text" class="form-control" name="description" placeholder="Description" required />
        </div>

        <div class="pb-3">
            <label for="icon">Icon: </label>
            <input id="icon" type="file" class="form-control" name="image" placeholder="Icon" required />
        </div>

        <button class="w-100 btn btn-lg btn-primary" type="submit">Create</button>
        <a href="/commerce-type-list" class="w-100 btn btn-lg btn-warning margin-top-2">Back</a>
    </form>
</main>
