{{! views/admin/edit-commerce-type.hbs }}

<main class="container">
    <form action="/edit-commerce-type" method="post" enctype="multipart/form-data">
        <h1 class="h3 mb-3 fw-normal">Edit a commerce type</h1>

        <input type="hidden" name="commerceTypeId" value="{{commerceType.id}}">

        <div class="pb-3">
            <label for="name">Name: </label>
            <input value="{{commerceType.name}}" type="text" class="form-control" name="name" placeholder="Name"
                id="name" required />
        </div>

        <div class="pb-3">
            <label for="description">Description:</label>
            <input value="{{commerceType.description}}" id="description" type="text" class="form-control"
                name="description" placeholder="Description" required />
        </div>

        <div class="pb-3">
            <label for="icon">Icon: </label>
            <input id="icon" type="file" class="form-control" name="image" placeholder="Icon" />
        </div>

        <button class="w-100 btn btn-lg btn-primary" type="submit">Create</button>
        <a href="/commerce-types-list" class="w-100 btn btn-lg btn-warning margin-top-2">Back</a>
    </form>
</main>