{{! views/admin/delivery-list.hbs }}

<div class="container mt-5">
  <h1 class="mb-4">Delivery List</h1>

  {{#if thereAreDeliveries}}
  <table class="table table-bordered table-hover">
    <thead class="thead-light">
      <tr>
        <th>Name</th>
        <th>Last Name</th>
        <th>Orders delivered</th>
        <th>Phone</th>
        <th>Email</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      {{#each deliveries}}
      <tr>
        <td>{{this.name}}</td>
        <td>{{this.lastName}}</td>
        <td>{{../ordersDeliveredCount}}</td>
        <td>{{this.phone}}</td>
        <td>{{this.email}}</td>
        <td>
          {{#if this.isActive}}
          <form action="/inactivate-delivery" method="post" class="d-inline">
            <input type="hidden" name="deliveryId" value="{{this.id}}" />
            <button type="submit" class="btn btn-danger btn-sm">Inactivate</button>
          </form>
          {{else}}
          <form action="/activate-delivery" method="post" class="d-inline">
            <input type="hidden" name="deliveryId" value="{{this.id}}" />
            <button type="submit" class="btn btn-success btn-sm">Activate</button>
          </form>
          {{/if}}
        </td>
      </tr>
      {{/each}}
    </tbody>
  </table>
  {{else}}
  <div class="alert alert-info" role="alert">
    No deliveries found.
  </div>
  {{/if}}
</div>