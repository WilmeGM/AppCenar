<div class="container mt-5">
    <h1 class="mb-4">Order Details</h1>

    <div class="card mb-4">
        <div class="card-header">
            <h2>{{order.commerceName}}</h2>
        </div>
        <div class="card-body">
            <p><strong>Status:</strong> {{order.status}}</p>
            <p><strong>Date:</strong> {{order.date}}</p>
            <p><strong>Time:</strong> {{order.time}}</p>
            <p><strong>Total:</strong> ${{order.total}}</p>
            <p><strong>Delivery Address:</strong> {{order.address.dataValues.name}}, {{order.address.dataValues.description}}</p>

            <h3>Products</h3>
            <ul class="list-group">
                {{#each order.products}}
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    <img src="{{this.image}}" alt="{{this.name}}" style="max-width: 50px;">
                    {{this.name}}
                    <span>${{this.price}}</span>
                </li>
                {{/each}}
            </ul>
        </div>
    </div>

    {{#if isInProcess}}
    <form action="/delivery-complete-order" method="POST">
        <input type="hidden" name="orderId" value="{{order.id}}">
        <button class="btn btn-success">Complete Order</button>
    </form>
    {{/if}}

    <a href="/delivery-assigned-orders" class="btn btn-secondary mt-3">Back</a>
</div>