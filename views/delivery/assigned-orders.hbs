<div class="container mt-5">
    <h1 class="mb-4">My Assigned Orders</h1>
    {{#if hasOrders}}
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>Logo</th>
                <th>Commerce</th>
                <th>Status</th>
                <th>Total</th>
                <th>Products</th>
                <th>Date</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {{#each orders}}
            <tr>
                <td>
                    <img src="{{this.commerceLogo}}" alt="{{this.commerceName}}" style="max-width: 100px;">
                </td>
                <td>{{this.commerceName}}</td>
                <td>{{this.status}}</td>
                <td>${{this.total}}</td>
                <td>{{this.productCount}}</td>
                <td>{{this.date}} {{this.time}}</td>
                <td>
                    <a href="/delivery-order-details/{{this.id}}" class="btn btn-primary btn-sm">View Details</a>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
    {{else}}
    <div class="alert alert-info">No assigned orders found.</div>
    {{/if}}
</div>