{{! views/customer/my-addresses }}

<div class="container mt-5">
    <h1 class="mb-4">Addresses List</h1>
    <a href="/save-address" class="btn btn-success mb-3">+ Create Address</a>

    {{#if thereAreAddresses}}
    <table class="table table-bordered table-hover">
        <thead class="thead-light">
            <tr>
                <th>Name</th>
                <th>Description</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {{#each addresses}}
            <tr>
                <td>{{this.name}}</td>
                <td>{{this.description}}</td>
                <td>
                    <a href="/edit-address/{{this.id}}" class="btn btn-warning btn-sm">Edit</a>
                    <form action="/delete-address" method="post" class="d-inline">
                        <input name="customerId" value="{{this.id}}" type="hidden">
                        <button onclick="confirmDelete(event)" type="submit"
                            class="btn btn-danger btn-sm">Delete</button>
                    </form>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
    {{else}}
    <div class="alert alert-info">No address found.</div>
    {{/if}}
</div>