{{! views/customer/edit-addres.hbs }}

<main class="container">
    <form action="/edit-address" method="post">
        <h1 class="h3 mb-3 fw-normal">Editing an address</h1>

        <input name="addressId" type="hidden" value="{{address.id}}">

        <div class="pb-3">
            <label for="name">Name: </label>
            <input value="{{address.name}}" type="text" class="form-control" name="name" placeholder="Name" id="name" required />
        </div>

        <div class="pb-3">
            <label for="description">Description:</label>
            <input value="{{address.description}}" id="description" type="text" class="form-control" name="description" placeholder="Description" required />
        </div>

        <button class="w-100 btn btn-lg btn-primary" type="submit">Update</button>
        <a href="/my-addresses" class="w-100 btn btn-lg btn-warning margin-top-2">Back</a>
    </form>
</main>
