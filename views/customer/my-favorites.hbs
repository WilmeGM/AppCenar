{{! views/customer/my-favorites }}

<div class="container mt-5">
    <h1 class="mb-4">My Favorites</h1>

    {{#if thereAreFavorites}}
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>Logo</th>
                <th>Commerce Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {{#each favorites}}
            <tr>
                <td>
                    <a href="/catalog/{{this.commerceId}}">
                        <img src="{{this.commerceLogo}}" alt="{{this.commerceName}} logo" class="img-fluid" style="max-width: 100px; height: auto;" />
                    </a>
                </td>
                <td>{{this.commerceName}}</td>
                <td>
                    <form action="/remove-favorite" method="post" class="d-inline">
                        <input type="hidden" name="favoriteId" value="{{this.id}}" />
                        <button onclick="confirmDelete(event)" type="submit" class="btn btn-danger btn-sm">Remove</button>
                    </form>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
    {{else}}
    <div class="alert alert-info" role="alert">
        You don't have any favorites yet.
    </div>
    {{/if}}
</div>
