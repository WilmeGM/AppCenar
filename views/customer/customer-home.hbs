{{! views/customer/customer-home }}

<div class="container mt-5">
    <h1 class="mb-4">Commcerces type List</h1>

    {{#if thereAreCommerceTypes}}
    <table class="table table-bordered table-hover">
        <thead class="thead-light">
            <tr>
                <th>Name</th>
                <th>Icon</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {{#each commerceTypes}}
            <tr>
                <td>{{this.name}}</td>
                <td>
                    <img src="{{this.icon}}" alt="{{this.name}} logo" class="img-fluid"
                        style="max-width: 100px; height: auto;" />
                </td>
                <td>
                    <a href="/commerce-customer-list/{{this.id}}" class="btn btn-primary btn-sm">View commercers</a>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
    <br>
    <br>
    {{else}}
    <div class="alert alert-info">No categories found.</div>
    {{/if}}
</div>