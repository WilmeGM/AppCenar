{{! views/customer/commerce-customer-list.hbs }}

<div class="container mt-5">
    <h1 class="mb-4">Commerce List</h1>

    <form method="get" action="/commerce-customer-list/{{commerceTypeId}}" class="d-flex justify-content-center gap-2">
        <input class="form-control me-2" type="search" name="name" value="{{nameFilter}}" placeholder="Search by name">
        <button class="btn btn-outline-success" type="submit">Search</button>
    </form>

    <br>

    <h2>Commerces count: {{commercesCount}}</h2>

    <br>

    {{#if thereAreCommerces}}
    <table class="table table-bordered table-hover">
        <thead class="thead-light">
            <tr>
                <th>Name</th>
                <th>Logo</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {{#each commerces}}
            <tr>
                <td>{{this.username}}</td>
                <td>
                    <img src="{{this.logo}}" alt="{{this.username}} logo" class="img-fluid"
                        style="max-width: 100px; height: auto;" />
                </td>
                <td>
                    <a href="/catalog/{{this.id}}" class="btn btn-primary btn-sm">View Catalog</a>
                    <form action="/markupAsFavorite" method="post" class="d-inline">
                        <input type="hidden" name="commerceId" value="{{this.id}}" />
                        <button type="submit" class="btn btn-primary btn-sm">I love</button>
                    </form>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
    <br>
    {{else}}
    <div class="alert alert-info" role="alert">
        No commerces found.
    </div>
    {{/if}}
    <a href="/customer-home" class="w-100 btn btn-lg btn-warning mt-2">Back</a>
</div>



